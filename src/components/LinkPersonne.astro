---
import type { ActionClient } from "astro:actions";
import type { CollectionEntry } from "astro:content";

interface Props {
  personne: CollectionEntry<"personnes">;
}

const { personne } = Astro.props;
---

{
  personne ? (
    <a href={`/personnes/${personne.id}`} class="text-blue-600 hover:underline">
      {personne.data.nom}
    </a>
  ) : (
    <span class="text-gray-500 italic">Inconnu</span>
  )
}
